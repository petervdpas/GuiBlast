{
  "title": "Cascading selects",
  "data": {
    "country": "NL",
    "city": "ams"
  },
  "fields": [
    {
      "key": "country",
      "type": "select",
      "label": "Country",
      "options": [
        { "value": "NL", "label": "Netherlands" },
        { "value": "DE", "label": "Germany" },
        { "value": "US", "label": "United States" }
      ]
    },
    {
      "key": "city",
      "type": "select",
      "label": "City",
      "options": [
        { "value": "ams", "label": "Amsterdam", "tags": ["NL"] },
        { "value": "rtm", "label": "Rotterdam", "tags": ["NL"] },
        { "value": "ber", "label": "Berlin", "tags": ["DE"] },
        { "value": "muc", "label": "Munich", "tags": ["DE"] },
        { "value": "nyc", "label": "New York", "tags": ["US"] },
        { "value": "sea", "label": "Seattle", "tags": ["US"] }
      ]
    },
    {
      "key": "postcode",
      "type": "text",
      "label": "Postcode (NL only)",
      "placeholder": "e.g. 1234 AB",
      "tags": ["nl_only"]
    },
    {
      "key": "postal",
      "type": "text",
      "label": "Postal/ZIP (non-NL)",
      "placeholder": "e.g. 10115 or 98101",
      "tags": ["intl_only"]
    }
  ],
  "visibility": [
    { "field": "country", "eq": "NL", "options": { "for": "city", "include_tags": ["NL"] } },
    { "field": "country", "eq": "DE", "options": { "for": "city", "include_tags": ["DE"] } },
    { "field": "country", "eq": "US", "options": { "for": "city", "include_tags": ["US"] } },

    { "field": "country", "eq": "NL",  "show_tags": ["nl_only"],  "hide_tags": ["intl_only"] },
    { "field": "country", "neq": "NL", "show_tags": ["intl_only"], "hide_tags": ["nl_only"] }
  ],
  "actions": [
    { "id": "ok", "label": "OK", "submit": true },
    { "id": "cancel", "label": "Cancel", "dismiss": true }
  ]
}
